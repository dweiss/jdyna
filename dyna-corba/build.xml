
<project name="dyna-corba" default="dist">
	<property name="tmp.path" location="tmp" />
	<property name="build.path" location="${tmp.path}/classes-corba" />
	<property name="dist.path" location="${tmp.path}/dist" />

	<property name="debug" value="on" />
	<property name="optimize" value="off" />

	<property name="src.java" location="src/corba" />
	<property name="src.idl"  location="src/corba/dyna.idl" />

	<!-- Paths and filesets. -->

	<fileset id="classpath.runtime" dir="lib" includes="runtime*/*.jar" />
	<fileset id="classpath.core"    dir="../dyna-core/tmp/dist" includes="*.jar" />

	<path id="classpath.compile">
		<fileset refid="classpath.runtime" />
		<fileset refid="classpath.core" />
	</path>

	<target name="prepare">
		<mkdir dir="${build.path}" />
	</target>

	<target name="clean" description="Clean generated files.">
		<delete dir="${build.path}" />
		<delete dir="${dist.path}" />
	</target>

	<target name="compile" depends="compile.idl" description="Compile sources.">
		<ant inheritall="false" antfile="build.xml" dir="../dyna-core" target="jar" />

		<javac destdir="${build.path}" debug="${debug}" optimize="${optimize}" deprecation="on" includeAntRuntime="no" includeJavaRuntime="no">
			<src location="${src.java}" />
			<classpath refid="classpath.compile" />
		</javac>

		<copy todir="${build.path}">
			<fileset dir="${src.java}">
				<exclude name="**/*.java" />
				<exclude name="**/*.idl" />
				<exclude name="**/*.depends" />
			</fileset>
		</copy>
	</target>

	<target name="compile.idl" depends="prepare" description="Compile Corba bindings.">
		<taskdef name="idldepend" classname="com.byteslooser.idldepend.IDLCheckerTask">
			<classpath id="classpath.idlcompiler">
				<fileset dir="lib/" includes="**/*.jar" />
			</classpath>
		</taskdef>

		<delete dir="${src.java}" includes="**/bindings/**/*.java" includeemptydirs="false" />
		<idldepend compiler="openorb" force="false" checkAll="false" verbose="basic" 
			targetDir="${src.java}" file="${src.idl}">
			<classpath refid="classpath.idlcompiler" />
		</idldepend>
	</target>

	<target name="jar" depends="compile" description="Compile the corba-layer JAR.">
		<mkdir dir="${dist.path}" />

		<pathconvert property="manifest.libs" pathsep=" ">
			<mapper>
				<chainedmapper>
					<flattenmapper />
				</chainedmapper>
			</mapper>
			<fileset refid="classpath.runtime" />
		</pathconvert>

		<jar jarfile="${dist.path}/jdyna-corba.jar" basedir="${build.path}">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Class-Path" value="${manifest.libs} jdyna-core.jar" />
			</manifest>
		</jar>

		<copy todir="${dist.path}" flatten="true">
			<fileset refid="classpath.runtime" />
		</copy>
	</target>

	<target name="dist" depends="jar" description="Builds the distribution.">
		<copy todir="${dist.path}">
			<fileset dir="src/scripts" />
		</copy>
		<chmod file="${dist.path}/dyna.sh" perm="a+rx" />
	</target>
</project>
