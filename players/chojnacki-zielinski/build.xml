
<project name="dyna-chojnacki-zielinski" default="jar">
	<property name="tmp.path" location="tmp" />
	<property name="build.path" location="${tmp.path}/classes-player" />
	<property name="dist.path" location="${tmp.path}/dist" />
	<property name="jar.name" value="dyna-chojnacki-zielinski.jar" />

	<property name="debug" value="on" />
	<property name="optimize" value="off" />

	<property name="src.java" location="src" />

	<property file="build.properties" />

	<fileset dir="lib" includes="runtime*/*.jar" id="classpath.runtime" />

	<target name="clean" description="Clean generated files.">
		<delete dir="${build.path}" />
		<delete dir="${dist.path}" />
	</target>

	<target name="compile" depends="clean" description="Compile source code.">
		<mkdir dir="${build.path}" />

		<fail unless="dyna.core.path">Define 'dyna.core.path' property pointing to project dyna-core.</fail>
		<fail unless="dyna.corba.path">Define 'dyna.corba.path' property pointing to project dyna-corba.</fail>
		
		<ant inheritall="false" antfile="build.xml" dir="${dyna.core.path}" target="dist" />
		<ant inheritall="false" antfile="build.xml" dir="${dyna.corba.path}" target="dist">
			<property name="dist.path" location="${tmp.path}/dist-corba" />
		</ant>
		
		<javac destdir="${build.path}" debug="${debug}" optimize="${optimize}" deprecation="on" includeAntRuntime="no" includeJavaRuntime="no">
			<src location="${src.java}" />
			<classpath>
				<fileset dir=".">
					<include name="lib/**/*.jar" />
				</fileset>
				<fileset dir="${tmp.path}/dist-corba">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="jar" depends="compile" description="Compile the core JAR.">
		<mkdir dir="${dist.path}" />
		<jar jarfile="${dist.path}/${jar.name}" basedir="${build.path}" />		
	</target>

	<target name="dist" depends="jar" />
</project>
