
<project name="dyna-sockets" default="dist">
	<property name="tmp.path" location="tmp" />
	<property name="build.path" location="${tmp.path}/classes" />
	<property name="dist.path" location="${tmp.path}/dist" />

	<property name="debug" value="on" />
	<property name="optimize" value="off" />

	<property name="src.java" location="src/java" />

	<!-- Paths and filesets. -->

	<fileset id="classpath.core" dir="../public/dyna-core/tmp/dist" includes="*.jar" />

	<path id="classpath.compile">
		<fileset refid="classpath.core" />
	</path>

	<target name="prepare">
		<mkdir dir="${build.path}" />
	</target>

	<target name="clean" description="Clean generated files.">
		<delete dir="${build.path}" />
		<delete dir="${dist.path}" />
	</target>

	<target name="compile" depends="prepare" description="Compile sources.">
		<ant inheritall="false" antfile="build.xml" dir="../public/dyna-core" target="jar" />
		<ant inheritall="false" antfile="build.xml" dir="../public/dyna-corba" target="jar" />

		<javac destdir="${build.path}" debug="${debug}" optimize="${optimize}" deprecation="on" includeAntRuntime="no" includeJavaRuntime="no">
			<src location="${src.java}" />
			<classpath refid="classpath.compile" />
		</javac>

		<copy todir="${build.path}">
			<fileset dir="${src.java}">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>

	<target name="jar" depends="compile" description="Compile the socket-layer JAR.">
		<mkdir dir="${dist.path}" />

		<jar jarfile="${dist.path}/jdyna-sockets.jar" basedir="${build.path}">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Class-Path" value="jdyna-core.jar" />
			</manifest>
		</jar>
	</target>

	<target name="dist" depends="jar" description="Builds the distribution.">
		<copy todir="${dist.path}">
			<fileset dir="src/scripts" />
			<fileset refid="classpath.core" />
			<fileset dir="../public/dyna-corba/tmp/dist" includes="jdyna-corba.jar" />
		</copy>
		<chmod perm="a+rx">
			<fileset dir="${dist.path}" includes="*.sh" /> 
		</chmod>
		<zip zipfile="jdyna.zip" update="false">
		    <zipfileset dir="${dist.path}" prefix="jdyna">
		        <exclude name="*.log" />
	        </zipfileset>
	    </zip>
	</target>
</project>
